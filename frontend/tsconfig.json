        "baseUrl": "js",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "ts-build",
        "sourceMap": true,
        "target": "es5",
        "experimentalDecorators": true,
        "lib": ["es2017", "dom"]
    },
    "include": [
        "./src/**/*"
    ]
}
